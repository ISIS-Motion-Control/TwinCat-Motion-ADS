<Window x:Class="Renishaw_XL80_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Renishaw_XL80_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="checkForMessage" Content="Check for message" HorizontalAlignment="Left" Margin="61,37,0,0" VerticalAlignment="Top" Width="131" Click="checkForMessage_Click"/>
        <Button x:Name="sendMessage" Content="Send message" HorizontalAlignment="Left" Margin="61,80,0,0" VerticalAlignment="Top" Width="131" Click="sendMessage_Click"/>
        <TextBox x:Name="messageToSend" HorizontalAlignment="Left" Margin="224,80,0,0" TextWrapping="Wrap" Text="Message to send" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="connectClient" Content="Connect" HorizontalAlignment="Left" Margin="61,151,0,0" VerticalAlignment="Top" Width="131" Click="connectClient_Click"/>
        <Button x:Name="enterReadMode" Content="Enter Read Mode" HorizontalAlignment="Left" Margin="61,217,0,0" VerticalAlignment="Top" Width="131" Click="enterReadMode_Click"/>

    </Grid>
</Window>
