<Window x:Class="TwinCat_Motion_ADS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwinCat_Motion_ADS"
        mc:Ignorable="d"
        Title="IBEX Lite" Height="450" Width="800">
    <Grid x:Name="mainWindowGrid" Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="77*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="moveAbsButton" Focusable="False" Content="MoveAbs" HorizontalAlignment="Left" Margin="141,118,0,0" VerticalAlignment="Top" Click="Button_Click" Grid.Column="1" Width="100"/>
        <TextBox x:Name="positionText" HorizontalAlignment="Left" Margin="0,114,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Grid.Column="1"/>
        <TextBox x:Name="axisSelection" HorizontalAlignment="Left" Margin="10,10,0,0" Text="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Grid.ColumnSpan="2"/>
        <Button Focusable="False" x:Name="initAxis" Content="initAxis" HorizontalAlignment="Left" Margin="36,9,0,0" VerticalAlignment="Top" Click="initAxis_Click" Grid.Column="1" Width="100"/>
        <TextBlock x:Name="axisPositionRB" HorizontalAlignment="Left" Margin="49,137,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="75" Grid.Column="1" Text="placeholder"/>
        <Button Focusable="False" x:Name="moveRelButton" Content="MoveRel" HorizontalAlignment="Left" Margin="141,143,0,0" VerticalAlignment="Top" Click="moveRelButton_Click" Grid.Column="1" Width="100"/>
        <Button Focusable="False" x:Name="moveVelButton" Content="MoveVel" HorizontalAlignment="Left" Margin="141,168,0,0" VerticalAlignment="Top" Grid.Column="1" Width="100" Click="moveVelButton_Click"/>
        <Image Grid.Column="1" HorizontalAlignment="Left" Height="247" Margin="584,174,0,0" VerticalAlignment="Top" Width="176" Source="/babyIbex.jpg"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="4,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="en-gb" Text="PosRB"/></TextBlock>
        <Button Focusable="False" x:Name="dataOuput" Content="dataOutput" HorizontalAlignment="Left" Margin="36,38,0,0" VerticalAlignment="Top" Grid.Column="1" Click="stopPosRead_Click" Width="100"/>
        <CheckBox x:Name="enabledCheck" Content="Enabled" Grid.Column="1" HorizontalAlignment="Left" Margin="0,168,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <CheckBox x:Name="fwEnabledCheck" Content="FwEnabled" Grid.Column="1" HorizontalAlignment="Left" Margin="0,187,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <CheckBox x:Name="bwEnabledCheck" Content="BwEnabled" Grid.Column="1" HorizontalAlignment="Left" Margin="0,205,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button Focusable="False" x:Name="stopMove" Content="Stop" HorizontalAlignment="Left" Margin="141,193,0,0" VerticalAlignment="Top" Grid.Column="1" Click="stopMove_Click" Width="100"/>
        <Button Focusable="False" x:Name="move2High" Content="Move2HighLimit" HorizontalAlignment="Left" Margin="141,218,0,0" VerticalAlignment="Top" Grid.Column="1" Click="move2High_Click" Width="100"/>
        <Button Focusable="False" x:Name="move2Low" Content="MoveLowLimit" HorizontalAlignment="Left" Margin="141,243,0,0" VerticalAlignment="Top" Grid.Column="1" Click="move2Low_Click" Width="100"/>
        <TextBox x:Name="timeoutTB" HorizontalAlignment="Left" Margin="408,121,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Grid.Column="1" PreviewTextInput="NumberValidationTextBox"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="321,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Width="80"><Run Text="Timeout"/><Run Text=" ("/><Run Language="en-gb" Text="s"/><Run Text=")"/></TextBlock>
        <TextBox x:Name="velocityTB" HorizontalAlignment="Left" Margin="408,144,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Grid.Column="1"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="321,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" TextAlignment="Right" Width="80"><Run Language="en-gb" Text="Velocity"/></TextBlock>
        <Button Focusable="False" x:Name="end2endTest" Content="End2End Test" HorizontalAlignment="Left" Margin="141,296,0,0" VerticalAlignment="Top" Grid.Column="1" Click="end2endTest_Click" Width="100"/>
        <Button Focusable="False" x:Name="cancelTest" Content="Cancel Test" HorizontalAlignment="Left" Margin="359,238,0,0" VerticalAlignment="Top" Grid.Column="1" Width="100" Click="cancelTest_Click"/>
        <Button x:Name="pauseTest" Content="Pause Test" HorizontalAlignment="Left" Margin="359,263,0,0" VerticalAlignment="Top" Grid.Column="1" Width="100" Click="pauseTest_Click" Background="#FF2EFF00" Focusable="False"/>
        <CheckBox x:Name="testCancelledCheck" Content="Cancelled" Grid.Column="1" HorizontalAlignment="Left" Margin="464,240,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <CheckBox x:Name="testPausedCheck" Content="Paused" Grid.Column="1" HorizontalAlignment="Left" Margin="464,265,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button Focusable="False" x:Name="connect2PlcButton" Content="Connect to PLC" HorizontalAlignment="Left" Margin="660,10,0,0" VerticalAlignment="Top" Click="connect2PlcButton_Click" Grid.Column="1" Width="100"/>
        <CheckBox x:Name="errorCheck" Content="Error" Grid.Column="1" HorizontalAlignment="Left" Margin="1,236,0,0" VerticalAlignment="Top" IsEnabled="False"/>
        <Button x:Name="enableButton" Focusable="False" Content="Enable/Disable" HorizontalAlignment="Left" Margin="169,10,0,0" VerticalAlignment="Top" Grid.Column="1" Width="100" Click="enableButton_Click"/>
        <Button x:Name="resetButton" Focusable="False" Content="Reset" HorizontalAlignment="Left" Margin="169,38,0,0" VerticalAlignment="Top" Grid.Column="1" Width="100" Click="resetButton_Click"/>
        <TextBox x:Name="cycleTB" HorizontalAlignment="Left" Margin="408,167,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" Grid.Column="1"/>
        <TextBlock Grid.Column="1" Margin="321,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80" TextAlignment="Right" HorizontalAlignment="Left"><Run Language="en-gb" Text="Cycles"/></TextBlock>
        <Button Focusable="False" x:Name="highLimReversal" Content="HighLimReversal" HorizontalAlignment="Left" Margin="141,337,0,0" VerticalAlignment="Top" Grid.Column="1" Click="highLimReversal_Click" Width="100"/>
        <Button Focusable="False" x:Name="lowLimReversal_Copy" Content="LowLimReversal" HorizontalAlignment="Left" Margin="141,362,0,0" VerticalAlignment="Top" Grid.Column="1" Click="lowLimReversal_Click" Width="100"/>
        <Button Focusable="False" x:Name="end2endTestWithReversal" Content="End2EndwRev Test" HorizontalAlignment="Left" Margin="131,387,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120" Click="end2endReversal_Click"/>
        <Button Focusable="False" x:Name="folderDirSelect" Content="Select Directory" HorizontalAlignment="Left" Margin="11,397,0,0" VerticalAlignment="Top" Click="folderDirSelect_Click" Width="100" Grid.ColumnSpan="2"/>
        <Button Focusable="False" x:Name="uniDirecitonalTest" Content="uniDirectional" HorizontalAlignment="Left" Margin="265,387,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120" Click="uniDirecitonalTest_Click"/>
        <Button Focusable="False" x:Name="uniDirecitonalTest_Copy" Content="biDirectional" HorizontalAlignment="Left" Margin="390,387,0,0" VerticalAlignment="Top" Grid.Column="1" Width="120" Click="uniDirecitonalTest_Copy_Click"/>

    </Grid>
</Window>
