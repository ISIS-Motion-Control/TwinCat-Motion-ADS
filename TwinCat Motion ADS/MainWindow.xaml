<Window x:Class="TwinCat_Motion_ADS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:TwinCat_Motion_ADS.MVVM.ViewModel"
        xmlns:view="clr-namespace:TwinCat_Motion_ADS.MVVM.View"
        xmlns:local="clr-namespace:TwinCat_Motion_ADS"
        mc:Ignorable="d"
        Title="IBEX Lite" Height="600" Width="1000" Icon="/ibexHead.jpg" WindowStartupLocation="CenterScreen"
        
        ResizeMode="CanResize"
        
        Background="Transparent"
        >
    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>
    <Border CornerRadius="10" Background="#3a7685">
        
    
    <Grid x:Name="mainWindowGrid" Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="857*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="0.06*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <RadioButton Content="NC Axis"
                             Foreground="White"
                             FontSize="24"
                             Height="30"
                             Style="{StaticResource MenuButtonTheme}"
                             IsChecked="True"
                             Command="{Binding NcAxisCommand}"/>
                <RadioButton Content="Air Axis"
                             Foreground="White"
                             FontSize="24"
                             Height="30"
                             Style="{StaticResource MenuButtonTheme}"
                             Command="{Binding AirAxisCommand}"/>

            </StackPanel>
        
        <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="amsNetIdTb" 
                             Text="5.65.74.200.1.1" 
                             Height="20"
                             VerticalAlignment="Top"
                             Margin="10,5,0,0"/>
                <Button x:Name="connect2PlcButton" 
                            Focusable="False" 
                            Content="Connect to PLC" 
                            Click="connect2PlcButton_Click" 
                            Height="20"
                            VerticalAlignment="Top"
                            Margin="10,5,0,0"
                        Style="{StaticResource myDefaultButton}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,0"/>



            </StackPanel>




        <StackPanel x:Name="StackPanel___MainWindow" Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,0" Grid.RowSpan="2">
                <ContentControl
                                    Content="{Binding CurrentView}" d:IsHidden="True"/>
            </StackPanel>
    </Grid>
    </Border>
</Window>
