<UserControl x:Class="TwinCat_Motion_ADS.ReadbackControlMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <StackPanel Orientation="Horizontal" Margin="2">
        <TextBlock x:Name="SettingTitle" HorizontalAlignment="Left"
                   TextAlignment="Right"
                   Foreground="White"
                   VerticalAlignment="Center" 
                   Width="{Binding TextWidth}"
                   FontSize="24"
                   Text="{Binding SetName}"/>
        <TextBlock x:Name="SettingValue" HorizontalAlignment="Left"
                   TextAlignment="Right"
                   Foreground="White"
                   VerticalAlignment="Center" 
                   Width="{Binding BoxWidth}"
                   FontSize="20"
                   Text="{Binding SetValue, StringFormat=F3}"/>
    </StackPanel>
</UserControl>
