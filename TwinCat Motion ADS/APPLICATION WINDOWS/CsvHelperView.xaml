<UserControl x:Class="TwinCat_Motion_ADS.CsvHelperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwinCat_Motion_ADS"
             mc:Ignorable="d" 
             d:DesignHeight="890" d:DesignWidth="1100">
    <Grid x:Name="csvWindowGrid" Margin="0" Focusable="True">
        <StackPanel>
            <Button x:Name="Button_ImportCsv" Focusable="False" Content="Import CSV File" Style="{StaticResource myDefaultButton}" Click="LoadSettingsFile_Click"/>
            <Button x:Name="Button_Test" Focusable="False" Content="Add Error" Style="{StaticResource myDefaultButton}" Click="Button_Test_Click"/>
            <Button x:Name="Button_Test2" Focusable="False" Content="Del Error" Style="{StaticResource myDefaultButton}" Click="Button_Test2_Click"/>

            <DataGrid x:Name="csvDataGrid" Height="200" ItemsSource="{Binding}" AutoGenerateColumns="True"/>
            <ListBox x:Name="csvHeaderList"  Height="100" ItemsSource="{Binding UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, Path=Columns, Source=dt}" DisplayMemberPath="ColumnName"/>
        </StackPanel>






    </Grid>
</UserControl>
