<UserControl x:Class="TwinCat_Motion_ADS.CsvHelperView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwinCat_Motion_ADS"
             mc:Ignorable="d" 
             d:DesignHeight="890" d:DesignWidth="1100">
    <Grid x:Name="csvWindowGrid" Margin="0" Focusable="True">
        <StackPanel>
            <Button x:Name="testButton" Focusable="False" Content="Import CSV File" Style="{StaticResource myDefaultButton}" Click="LoadSettingsFile_Click"/>
            <DataGrid x:Name="csvDataGrid" Height="200" ItemsSource="{Binding}"/>
            <ListBox x:Name="csvHeaderList"  Height="100" ItemsSource="{Binding}" DisplayMemberPath="ColumnName"/>
        </StackPanel>






    </Grid>
</UserControl>
